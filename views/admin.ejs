<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Turf Booking Admin Panel</title>
    <link rel="stylesheet" href="/css/admin-style.css">
    <style>
        :root {
            --primary-color: #001f3f; /* Navy Blue */
            --secondary-color: #ff4136; /* Red */
            --background-color: #f4f4f9;
            --text-color: #ffffff;
            --light-text-color: #bbbbbb;
        }

        /* Body & General */
        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
            background-color: var(--background-color);
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .admin-panel {
            display: flex;
            height: 100%;
            width: 100%;
        }

        /* Sidebar */
        .sidebar {
            width: 220px;
            background-color: var(--primary-color);
            color: var(--text-color);
            padding: 20px;
            display: flex;
            flex-direction: column;
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            overflow-y: auto;
            height: 100vh;
        }

        .sidebar-header h2 {
            text-align: center;
            color: var(--text-color);
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
        }

        .sidebar-menu li {
            margin: 20px 0;
        }

        .sidebar-menu a {
            color: var(--light-text-color);
            text-decoration: none;
            font-weight: 500;
            display: block;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .sidebar-menu a:hover {
            background-color: var(--secondary-color);
            color: var(--text-color);
        }

        /* Main Content */
        .main-content {
            flex-grow: 1;
            margin-left: 250px; /* Adjust margin to account for the sidebar width */
            padding: 20px;
            overflow-y: auto;
        }

        .main-content header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-bottom: 20px;
            border-bottom: 2px solid var(--primary-color);
        }

        .main-content header h1 {
            color: var(--primary-color);
        }

        .logout-btn {
            background-color: var(--secondary-color);
            color: var(--text-color);
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .logout-btn:hover {
            background-color: #ff6347;
        }

        /* Section Headings */
        .main-content h2 {
            margin-top: 20px;
            color: var(--primary-color);
            font-size: 24px;
        }

        /* Stats Grid */
        .stats-grid {
            display: flex;
            gap: 20px;
        }

        .stats-grid .card {
            background-color: var(--primary-color);
            color: var(--text-color);
            padding: 20px;
            border-radius: 10px;
            width: 200px;
            text-align: center;
        }

        .stats-grid .card h3 {
            margin: 0;
            font-size: 18px;
        }

        .stats-grid .card p {
            font-size: 28px;
            margin: 10px 0 0;
        }

        /* Tables */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 2px;
            background-color: var(--text-color);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        table th,
        table td {
            padding: 10px;
            text-align: left;
            border: 1px solid var(--light-text-color);
            color: var(--primary-color);
        }

        table th {
            background-color: var(--primary-color);
            color: var(--text-color);
        }

        table td {
            background-color: var(--background-color);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .sidebar {
                width: 200px;
                position: static;
                height: auto;
            }

            .main-content {
                margin-left: 0;
            }

            .stats-grid {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
</head>

<body>
    <div class="admin-panel">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>Admin Panel</h2>
            </div>
            <ul class="sidebar-menu">
                <li><a href="#dashboard">Dashboard</a></li>
                <li><a href="#bookings">Manage Bookings</a></li>
                <li><a href="#feedback">Feedback</a></li>
            </ul>
        </aside>

        <!-- Main Content -->
        <section class="main-content">
            <header>
                <h1>Welcome, Admin</h1>
                <a href="/" class="logout-btn">Logout</a>
            </header>

            <div class="content">
                <section id="dashboard">
                    <h2>Dashboard</h2>
                    <div class="stats-grid">
                        <div class="card">
                            <h3>Total Bookings</h3>
                            <p><%= totalBookingsCount %></p>
                        </div>
                        <div class="card">
                            <h3>Total Revenue</h3>
                            <p>â‚¹<%= totalRevenue.toFixed(2) %></p>
                        </div>
                    </div>
                </section>

                <section id="bookings">
                    <div id="manage_booking">
                        <h2>Manage Bookings</h2>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% bookings.forEach(booking => { %>
                                <tr>
                                    <td><%= booking.name %></td>
                                    <td><%= booking.email %></td>
                                    <td><%= booking.phone %></td>
                                    <td><%= booking.startHour %>:00</td>
                                    <td><%= booking.endHour %>:00</td>
                                    <td><%= booking.date.toISOString().slice(0, 10) %></td>
                                    <td>Confirmed</td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </section>

                <section id="feedback">
                    <h2>Feedback</h2>
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Subject</th>
                                <th>Message</th>
                                <th>Received At</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% contacts.forEach(contact => { %>
                                <tr>
                                    <td><%= contact.name %></td>
                                    <td><%= contact.email %></td>
                                    <td><%= contact.subject %></td>
                                    <td><%= contact.message %></td>
                                    <td><%= contact.createdAt.toISOString().slice(0, 19).replace('T', ' ') %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </section>
            </div>
        </section>
    </div>
</body>

</html>
